{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": ["error", "always"],
        "no-duplicate-imports": ["error", {}],
        "prefer-const": ["error", {
                "destructuring": "any"
        }],
        "prefer-arrow-callback": ["error", {}],
        "no-var": "error",
        "camelcase": ["error"],
        "no-lonely-if": "error",
        "no-use-before-define": ["error"],
        "radix": "error",
        "eqeqeq": "error"
      }
}
